# ==============================================================================
# News Aggregator Pro - Environment Configuration
# ==============================================================================

# ==============================================================================
# PostgreSQL Database
# ==============================================================================
POSTGRES_USER=newsaggregator
POSTGRES_PASSWORD=changeme123
POSTGRES_DB=news_aggregator
POSTGRES_PORT=5433

# Database URL for application
DATABASE_URL=postgresql://newsaggregator:changeme123@postgres:5432/news_aggregator

# ==============================================================================
# Redis
# ==============================================================================
REDIS_URL=redis://redis:6379/0

# ==============================================================================
# Qdrant Vector Database
# ==============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_URL=http://qdrant:6333

# ==============================================================================
# Ollama (Local LLM)
# ==============================================================================
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5:14b-instruct-q5_k_m
EMBEDDING_MODEL=nomic-embed-text

# ==============================================================================
# LLM Provider Configuration (NEW v4.1)
# ==============================================================================
# Primary provider: openrouter, groq, google, ollama
LLM_PROVIDER=groq

# Strategy: cost_optimized, balanced, quality_focused, speed_focused
LLM_STRATEGY=balanced

# Enable fallback between providers (true/false)
# false = use ONLY the primary provider, no fallback chain
ENABLE_FALLBACK=true

# Fallback chain (optional): speed_first, quality_first, free_only, privacy_first, auto
# auto = determined by LLM_PROVIDER
LLM_FALLBACK_CHAIN=auto

# ==============================================================================
# API Keys (at least one required for cloud providers)
# ==============================================================================
# OpenRouter (https://openrouter.ai) - recommended for variety of models
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Groq (https://console.groq.com) - fastest, free tier available
GROQ_API_KEY=gsk_your-key-here

# Google (https://aistudio.google.com) - Gemini models
GEMINY_API_KEY=AIzaSy-your-key-here

# HuggingFace (optional, for embeddings)
HUGGINGFACEHUB_API_TOKEN=hf_your-token-here

# ==============================================================================
# Directus CMS Settings
# ==============================================================================
DIRECTUS_PORT=8055
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=admin
DIRECTUS_KEY=replace-with-random-value-in-production
DIRECTUS_SECRET=replace-with-another-random-value

# ==============================================================================
# Telegram Integration Settings
# ==============================================================================
# Get API credentials from https://my.telegram.org
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Bot Token (get from @BotFather) - for publishing via bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Channel/Group to publish to
# Format: @channel_username OR -1001234567890 (group ID)
TELEGRAM_CHANNEL=@your_channel

# Publishing settings
TELEGRAM_MIN_RELEVANCE=7.0
TELEGRAM_INCLUDE_IMAGES=true
TELEGRAM_POST_DELAY=60

N8N_USER=admin
N8N_PASSWORD=changeme123
N8N_PORT=5678
N8N_JWT_SECRET=your-super-secret-jwt-key-here
N8N_WEBHOOK_URL=http://localhost:5678/
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# ==============================================================================
# App Settings
# ==============================================================================
DEBUG=false
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

TELEGRAM_BOT_TOKEN=твой_токен_бота
TELEGRAM_CHAT_ID=@имя_канала
TELEGRAM_CHANNEL_URL=https://t.me/имя_канала
